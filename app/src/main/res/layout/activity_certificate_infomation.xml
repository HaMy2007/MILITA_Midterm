<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".CertificateInfomationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btnBack"
                android:layout_marginLeft="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:background="@drawable/arrow_back"/>
            <Button
                android:id="@+id/btnSetting"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/settings"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/itim"
            android:text="Banhmiruoc"
            android:textColor="@color/brown"
            android:gravity="center"
            android:textSize="30dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar_user"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/user"
            android:layout_gravity="center"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/brown"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/person"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Certificate Name"
                android:fontFamily="@font/itim"
                android:textSize="22sp"
                android:textColor="@color/brown"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Banhmiruoc"
            android:layout_marginLeft="75dp"
            android:textColor="@color/brown"
            android:fontFamily="@font/itim"
            android:textSize="20sp"/>
        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="@color/brown"
            android:layout_marginLeft="75dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/birthday"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Session"
                android:fontFamily="@font/itim"
                android:textSize="22sp"
                android:textColor="@color/brown"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_session"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="18/02/2004"
            android:layout_marginLeft="75dp"
            android:textColor="@color/brown"
            android:fontFamily="@font/itim"
            android:textSize="20sp"/>
        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="@color/brown"
            android:layout_marginLeft="75dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/email"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Organization"
                android:fontFamily="@font/itim"
                android:textSize="22sp"
                android:textColor="@color/brown"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_organization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Banhmiruoc@gmail.com"
            android:layout_marginLeft="75dp"
            android:textColor="@color/brown"
            android:fontFamily="@font/itim"
            android:textSize="20sp"/>
        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="@color/brown"
            android:layout_marginLeft="75dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/phone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="School"
                android:fontFamily="@font/itim"
                android:textSize="22sp"
                android:textColor="@color/brown"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_school"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0123456789"
            android:layout_marginLeft="75dp"
            android:textColor="@color/brown"
            android:fontFamily="@font/itim"
            android:textSize="20sp"/>
        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="@color/brown"
            android:layout_marginLeft="75dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/status"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Description"
                android:fontFamily="@font/itim"
                android:textSize="22sp"
                android:textColor="@color/brown"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Normal"
            android:layout_marginLeft="75dp"
            android:textColor="@color/brown"
            android:fontFamily="@font/itim"
            android:textSize="20sp"/>
        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="@color/brown"
            android:layout_marginLeft="75dp" />
    </LinearLayout>
</LinearLayout>